<?xml version="1.0"?>
<robot name="hospital_map">

  <link name="map_link">

    <!-- 보이는 용 -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://hospital_description/meshes/bases/map_clean.stl"
              scale=" 100 100 100"/>
      </geometry>
      <material name="white">
        <color rgba="0.9 0.9 0.9 1.0"/>
      </material>
    </visual>

    <!-- 충돌 용 -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://hospital_description/meshes/bases/map_clean.stl"
              scale=" 100 100 100"/>
      </geometry>
    </collision>

    <!-- 고정 오브젝트라 관성은 경고 방지용으로만 -->
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0"
               iyy="0.01" iyz="0"
               izz="0.01"/>
    </inertial>

  </link>

</robot>
